@model Project.Models.Register

@{
    Layout = "~/Views/_LayoutPage.cshtml";
}

<br /><br /><br />
<center>
    <h1>Welcome to Login Page</h1>
</center><br /><br /><br />
<section>
    <form class="form-horizontal" method="post" action="/Account/verifyUser">




        <!-- Text input-->
        <div class="form-group" align="center">
            <label class="col-md-4 control-label" for="email">Email</label>
            <div class="col-md-3">
                <input autofocus="" class="form-control input-md" id="email" name="email" placeholder="e.g. example@domain.com" type="email" value="" />
                <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>
            </div>
        </div>

        <!-- Password input-->
        <div class="form-group" align="center">
            <label class="col-md-4 control-label" for="password">Password</label>
            <div class="col-md-3">
                <input class="form-control input-md" id="password" name="password" placeholder="Password" required="" type="password" value="" />
                <span class="field-validation-valid" data-valmsg-for="password" data-valmsg-replace="true"></span>
            </div>
        </div>





        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="login"></label>
            <div class="col-md-1">
                <input type="submit" id="login" name="login" class="btn btn-info btn-lg btn-block" value="login" />
            </div>
        </div>
        <br />
        <p class="text-center">

            <a href="Register.html">Register for an account?</a>

        </p>

    </form>
</section>
